# Application Environment
APP_ENV=staging
APP_NAME=WebMeteor

# Database Configuration (PostgreSQL 16)
DB_HOST=db
DB_PORT=5432
DB_NAME=webmeteor_staging
DB_USER=webmeteor_staging_user
DB_PASSWORD=GENERATE_WITH_openssl_rand_-base64_32

# API Service
API_PORT=4402
API_URL=https://staging-api.webmeteor.in

# Frontend (WWW) Service
WWW_PORT=4400
WWW_URL=https://staging.webmeteor.in

# Alert Service (Socket.IO)
ALERT_PORT=4401
ALERT_URL=https://staging-alert.webmeteor.in

# Security (Generate secure keys)
JWT_SECRET=GENERATE_WITH_openssl_rand_-base64_32
SESSION_SECRET=GENERATE_WITH_openssl_rand_-base64_32

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here

# CORS Settings
CORS_ORIGIN=https://staging.webmeteor.in

# Email Configuration (Optional)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@webmeteor.com
MAIL_FROM_NAME=WebMeteor

# Storage
UPLOAD_MAX_SIZE=10M
STORAGE_PATH=/var/www/html/storage

# Logging
LOG_LEVEL=info

# GitHub Webhook (for auto-deployment)
GITHUB_WEBHOOK_SECRET=GENERATE_WITH_openssl_rand_-hex_32

# Docker Configuration (for unified docker-compose.yaml)
DEPLOY_ENV=staging
TRAEFIK_API_SUBDOMAIN=staging-api
TRAEFIK_WWW_SUBDOMAIN=staging
TRAEFIK_ALERT_SUBDOMAIN=staging-alert
TRAEFIK_API_DOMAIN=staging-api.webmeteor.in
TRAEFIK_WWW_DOMAIN=staging.webmeteor.in
TRAEFIK_ALERT_DOMAIN=staging-alert.webmeteor.in
DOCKER_NETWORK_NAME=webmeteor_staging_network
POSTGRES_VOLUME_NAME=webmeteor_staging_postgres_data
API_LOGS_VOLUME_NAME=webmeteor_staging_api_logs
