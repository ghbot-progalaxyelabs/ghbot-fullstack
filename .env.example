# Application Environment
APP_ENV=development
APP_NAME=WebMeteor

# Database Configuration (PostgreSQL 16)
DB_HOST=db
DB_PORT=5432
DB_NAME=webmeteor
DB_USER=webmeteor_user
DB_PASSWORD=your_secure_password_here

# API Service
API_PORT=4402
API_URL=http://localhost:4402

# Frontend (WWW) Service
WWW_PORT=4400
WWW_URL=http://localhost:4400

# Alert Service (Socket.IO)
ALERT_PORT=4401
ALERT_URL=http://localhost:4401

# Security (Generate secure keys in production)
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here

# CORS Settings
CORS_ORIGIN=http://localhost:4400

# Email Configuration (Optional)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@webmeteor.com
MAIL_FROM_NAME=WebMeteor

# Storage
UPLOAD_MAX_SIZE=10M
STORAGE_PATH=/var/www/html/storage

# Logging
LOG_LEVEL=info

# GitHub Webhook (for auto-deployment)
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here
