# Application Environment
APP_ENV=production
APP_NAME=WebMeteor

# Database Configuration (PostgreSQL 16)
DB_HOST=db
DB_PORT=5432
DB_NAME=webmeteor_production
DB_USER=webmeteor_prod_user
DB_PASSWORD=GENERATE_WITH_openssl_rand_-base64_32

# API Service
API_PORT=5402
API_URL=https://api.webmeteor.in

# Frontend (WWW) Service
WWW_PORT=5400
WWW_URL=https://www.webmeteor.in

# Alert Service (Socket.IO)
ALERT_PORT=5401
ALERT_URL=https://alert.webmeteor.in

# Security (Generate secure keys in production)
JWT_SECRET=GENERATE_WITH_openssl_rand_-base64_32
SESSION_SECRET=GENERATE_WITH_openssl_rand_-base64_32

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here

# CORS Settings
CORS_ORIGIN=https://www.webmeteor.in

# Email Configuration (Optional)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@webmeteor.com
MAIL_FROM_NAME=WebMeteor

# Storage
UPLOAD_MAX_SIZE=10M
STORAGE_PATH=/var/www/html/storage

# Logging
LOG_LEVEL=warning

# GitHub Webhook (for auto-deployment)
GITHUB_WEBHOOK_SECRET=GENERATE_WITH_openssl_rand_-hex_32

# Docker Configuration (for unified docker-compose.yaml)
DEPLOY_ENV=production
TRAEFIK_API_SUBDOMAIN=production-api
TRAEFIK_WWW_SUBDOMAIN=production-www
TRAEFIK_ALERT_SUBDOMAIN=production-alert
TRAEFIK_API_DOMAIN=api.webmeteor.in
TRAEFIK_WWW_DOMAIN=www.webmeteor.in
TRAEFIK_ALERT_DOMAIN=alert.webmeteor.in
DOCKER_NETWORK_NAME=webmeteor_production_network
POSTGRES_VOLUME_NAME=webmeteor_production_postgres_data
API_LOGS_VOLUME_NAME=webmeteor_production_api_logs
