# Application Environment
APP_ENV=development
APP_NAME=WebMeteor

# Database Configuration (PostgreSQL 16)
DB_HOST=db
DB_PORT=5432
DB_NAME=webmeteor_dev
DB_USER=webmeteor_user
DB_PASSWORD=GENERATE_WITH_openssl_rand_-base64_32

# API Service
API_PORT=4402
API_URL=http://localhost:4402

# Frontend (WWW) Service
WWW_PORT=4400
WWW_URL=http://localhost:4400

# Alert Service (Socket.IO)
ALERT_PORT=4401
ALERT_URL=http://localhost:4401

# Security (Generate secure keys)
JWT_SECRET=GENERATE_WITH_openssl_rand_-base64_32
SESSION_SECRET=GENERATE_WITH_openssl_rand_-base64_32

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here

# CORS Settings
CORS_ORIGIN=http://localhost:4400

# Email Configuration (Optional)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@webmeteor.com
MAIL_FROM_NAME=WebMeteor

# Storage
UPLOAD_MAX_SIZE=10M
STORAGE_PATH=/var/www/html/storage

# Logging
LOG_LEVEL=debug

# GitHub Webhook (for auto-deployment)
GITHUB_WEBHOOK_SECRET=GENERATE_WITH_openssl_rand_-hex_32

# Docker Configuration (for local development)
DEPLOY_ENV=dev
DOCKER_NETWORK_NAME=webmeteor_dev_network
POSTGRES_VOLUME_NAME=webmeteor_dev_postgres_data
API_LOGS_VOLUME_NAME=webmeteor_dev_api_logs
